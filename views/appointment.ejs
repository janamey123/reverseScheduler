<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>New Appointment</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!--jQuery-->
    <script src="https://code.jquery.com/jquery-3.1.0.js"></script>

    <!--ajax -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
</head>
<body class="text-center">
<br>
<h4>Add new appointment!</h4>
<br><br>

Date: <input type="date" name="date"><br> <br>
Start time: <input type="time" name="startTime"><br> <br>
End time: <input type="time" name="endTime"><br> <br>
Description: <textarea name="description" cols="50" height="20"></textarea>
<br><br>
<button id="appointmentBtn" class="btn btn-lg btn-info">Add appointment!</button>
<br><br>
<div id="appointmentError"></div>
<script>
    // user adds new appointment
    $("#appointmentBtn").on("click", function () {
        let date = $("#date").val();
        let startTime = $("#startTime").val();
        let endTime = $("#endTime").val();
        let description = $("#description").val();
        //TODO get actual username after Login works
        let username = "Jana";

        $.ajax({
            method: "GET",
            url: "/addAppointmentRequest",
            dataType: "json",
            data: {
                "date": date,
                "startTime": startTime,
                "endTime": endTime,
                "description": description,
                "username": username
            },
            success: function (result, status) {
                if (result == false) {
                    $("#appointmentError").html("Sorry, your appointment was not added to your schedule.");
                } else {
                    $("#appointmentError").html("Appointment was added to your schedule successfully.");
                }
            }

        });//ajax
    });//signUpBtn
</script>
</body>
</html>